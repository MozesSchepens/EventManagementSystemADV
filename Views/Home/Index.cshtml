@model IEnumerable<EventManagementSystemADV.Models.Event>

<table class="table">
    <thead>
        <tr>
            <th>Naam</th>
            <th>Categorie</th>
            <th>Datum</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.Name</td>
                    <td>@(item.Category?.Name ?? "Geen categorie")</td> <!-- Controleer op null -->
                    <td>@item.Date.ToShortDateString()</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Verwijderen</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
