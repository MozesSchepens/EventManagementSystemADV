@model EventManagementSystemADV.Models.Volunteer

@{
    ViewData["Title"] = "Volunteer Details";
}

<h1>Volunteer Details</h1>

<div>
    <h4>Volunteer</h4>
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Email</dt>
